<%= form_tag('/reviews', remote: true) do %>
  <%= label_tag :worth_it %>
  1 <%= radio_button_tag :worth_it, '1', :checked => 1 %>
  2 <%= radio_button_tag :worth_it, '2', :checked => 2 %>
  3 <%= radio_button_tag :worth_it, '3', :checked => 3 %>
  4 <%= radio_button_tag :worth_it, '4', :checked => 4 %>
  5 <%= radio_button_tag :worth_it, '5', :checked => 5 %>
  <br>
  <%= label_tag :comment %>
  <%= text_field_tag :comment %>
  <br>
  <%= hidden_field_tag(:restaurant_id, @restaurant.id) %>
  <br>
  <%= submit_tag('Add Review') %>
<% end %>