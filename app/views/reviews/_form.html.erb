<%= form_for @review, remote: true do |f| %>

  <%= f.radio_button :worth_it, '1', :checked => 1 %>
  <%= f.radio_button :worth_it, '2', :checked => 2 %>
  <%= f.radio_button :worth_it, '3', :checked => 3 %>
  <%= f.radio_button :worth_it, '4', :checked => 4 %>
  <%= f.radio_button :worth_it, '5', :checked => 5 %>

  <%= f.text_area :comment %>

  <%= f.hidden_field(:restaurant_id, value: @restaurant.id) %>

  <%= f.submit('Add Review') %>
<% end %>
