<h3 class="username"><%= link_to(review.user.username, user_path(review.user.id)) %></h3>
<div class="worth-it">Worh it? <%= review.worth_it %></div>
<div class="review-comment"><%= review.comment %></div>
<% if can?(:update, review) %>
  <%= link_to('Edit', edit_review_path(review), remote: true) %> |
<% end %>
<% if can? :destroy, review %>
  <%= link_to 'Delete', review, remote: true, method: :delete, data: {confirm: 'Are you sure you want to delete this review?'} %>
<% end %>