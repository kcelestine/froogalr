<div id="user-show-content">
  <div id="top-content">
    <%= link_to('Edit Account', edit_user_registration_path, :id => 'edit-user') %>
    <h2 class="username"><%= @user.username %></h2>
    <h3>Name: <%= "#{@user.first_name} #{@user.last_name}" %></h3>
  </div>

  <div id="user-favorites">
      <ul class="favorites-list">
      <h3 id="favorites-header">Favorites</h3>
      <% if @user.restaurants.count < 1 %>
      <li>This user has no favorites</li>
      <% else %>
        <% @user.restaurants.each do |restaurant| %>
          <li class= "favorite-restaurant"><%= link_to(restaurant.name, restaurant_path(restaurant)) %></li>
        <% end %>
      <% end %>
      </ul>
  </div>

  <div id="user-reviews">
      <div class="reviews">
        <h3 id="reviews-header">Reviews</h3>
        <% @user.reviews.each do |review| %>
          <div class="review-content">
            Comment: <p class="comment"><%= review.comment %></p><br>
            <p class="worth-it">Was it worth it? <%= review.worth_it %></p><br>
            <a href="/restaurants/<%= review.restaurant_id %>">Click to view the restaurant's page</a>
          </div>
        <% end %>
      </div>
  </div>
</div>
